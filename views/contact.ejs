<%- include('partials/header', { title: 'Contact | Shivang Portfolio', active: 'contact' }) %>

<!-- simple contact page header -->
<h1>Contact Me</h1>

<!-- message shown after form is submitted -->
<% if (submitted) { %>
  <div class="alert alert-success mb-3">
    I appreciate you reaching out to me, <%= name %>. Iâ€™ll get back to you as soon as I can through <%= email %>.
  </div>
<% } %>

<!-- main contact form -->
<form method="post" action="/contact" class="row g-3">
  
  <!-- name field -->
  <div class="col-md-6">
    <label class="form-label">Name</label>
    <input name="name" class="form-control" required />
  </div>

  <!-- email field -->
  <div class="col-md-6">
    <label class="form-label">Email</label>
    <input name="email" type="email" class="form-control" required />
  </div>

  <!-- message textarea -->
  <div class="col-12">
    <label class="form-label">Message</label>
    <textarea name="message" rows="4" class="form-control" required></textarea>
  </div>

  <!-- submit button -->
  <div class="col-12">
    <button class="btn btn-success" type="submit">
      <i class="fa-solid fa-paper-plane"></i> Send
    </button>
  </div>
</form>

<%- include('partials/footer') %>
